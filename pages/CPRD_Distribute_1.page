                                </apex:column>
                                <apex:column headervalue="Community" rendered="{!if(payment.bud.Status__c == 'Open' || payment.bud.Id==null, true, false)}">
                                    <div id="participantCN{!rowcount}"><apex:inputtext value="{!payment.CommunityNumber}" onfocus="this.blur();" style="margin-right: -4px;" /></div>
                                </apex:column>

