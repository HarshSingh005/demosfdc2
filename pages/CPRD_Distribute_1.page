                                        </div>
                                    </div>
                                </apex:column>
                                <apex:column headervalue="Product Type" rendered="{!if(payment.bud.Status__c != 'Open' && payment.bud.Id!=null, true, false)}">
                                    <div style="display: flex;">
                                        <apex:outputfield value="{!payment.bud.Product_Type__c}"></apex:outputfield>
