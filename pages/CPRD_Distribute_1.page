                                <apex:column headervalue="Community" rendered="{!if(payment.bud.Status__c != 'Open' && payment.bud.Id!=null, true, false)}">
                                    <div style="display: flex;">
                                        <apex:outputlabel value="{!payment.CommunityNumber}"></apex:outputlabel>
                                    </div>
                                </apex:column>
                                <apex:column headervalue="Soft Credit" rendered="{!if(payment.bud.Status__c != 'Open' && payment.bud.Id!=null, true, false)}">
