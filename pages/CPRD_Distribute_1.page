                            <apex:outputLabel value="Amount "></apex:outputLabel>
                            <apex:outputField value="{!batchUpload.rC_Connect__Giving_Giving_Amount__c}" id="batchUploadAmount"/>
                        </td>
                    </tr>
                </table>

                <hr/>
                <apex:pagemessages id="pgMsg" />
